<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div
      style="
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI',
          Roboto, sans-serif;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        color: #1a1a1a;
        line-height: 1.5;
      "
    >
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
        rel="stylesheet"
      />

      <h1
        style="
          color: #2a2a7c;
          text-align: center;
          margin-bottom: 5px;
          font-size: 24px;
          font-weight: 600;
          letter-spacing: -0.025em;
        "
      >
        Receipt from Genuine Electronics
      </h1>
      <p
        style="
          text-align: center;
          color: #6b7280;
          margin-top: 0;
          font-size: 14px;
          letter-spacing: -0.01em;
        "
      >
        Order ID #{{order._id}}
      </p>

      <table style="width: 100%; margin: 30px 0; border-collapse: collapse">
        <tr>
          <td
            style="
              padding: 10px 0;
              color: #6b7280;
              font-size: 12px;
              text-transform: uppercase;
              letter-spacing: 0.05em;
              font-weight: 500;
            "
          >
            AMOUNT PAID
          </td>
          <td
            style="
              padding: 10px 0;
              color: #6b7280;
              font-size: 12px;
              text-transform: uppercase;
              letter-spacing: 0.05em;
              font-weight: 500;
            "
          >
            DATE PAID
          </td>
          <td
            style="
              padding: 10px 0;
              color: #6b7280;
              font-size: 12px;
              text-transform: uppercase;
              letter-spacing: 0.05em;
              font-weight: 500;
            "
          >
            PAYMENT METHOD
          </td>
        </tr>
        <tr>
          <td style="padding: 5px 0; font-size: 15px; font-weight: 500">
            MVR{{order.payment.amount}}
          </td>
          <td style="padding: 5px 0; font-size: 15px">
            Jan 19, 2025, 12:01:02 PM
          </td>
          <td
            style="padding: 5px 0; font-size: 15px; text-transform: uppercase;"
          >{{order.payment.brand}}
            -
            {{order.payment.last4}}</td>
        </tr>
      </table>

      <h2
        style="
          color: #4b5563;
          font-size: 14px;
          margin: 20px 0;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 0.05em;
        "
      >
        SUMMARY
      </h2>

      <table
        style="
          width: 100%;
          background: #f8f9fa;
          padding: 20px;
          border-radius: 8px;
        "
      >
        {{#each order.items}}
          <tr>
            <td
              style="padding: 8px 0; font-size: 15px"
            >{{this.variant.product.name}} Ã— {{this.quantity}}</td>
            <td style="text-align: right; font-size: 15px; font-weight: 500">
              MVR{{this.subTotal}}
            </td>
          </tr>
        {{/each}}

        <tr style="color: #4b5563">
          <td style="padding: 8px 0; font-size: 15px">Total</td>
          <td style="text-align: right; font-size: 15px; font-weight: 500">
            MVR{{order.total}}
          </td>
        </tr>
        <tr style="color: #4b5563">
          <td style="padding: 8px 0; font-size: 14px">
            Loyalty Discount (MVR{{order.payment.discount}}
            off)
          </td>
          <td style="text-align: right; font-size: 14px; color: #6b7280">
            MVR-{{order.payment.discount}}
          </td>
        </tr>
        <tr style="font-weight: 600">
          <td
            style="
              padding: 12px 0;
              font-size: 15px;
              border-top: 1px solid #e5e7eb;
              margin-top: 8px;
            "
          >
            Amount paid
          </td>
          <td
            style="
              text-align: right;
              font-size: 15px;
              border-top: 1px solid #e5e7eb;
              margin-top: 8px;
            "
          >
            MVR{{order.payment.amount}}
          </td>
        </tr>
      </table>
    </div>
  </body>
</html>